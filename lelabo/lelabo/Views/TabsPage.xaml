<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            Title="Tabs Page"
            xmlns:views="clr-namespace:lelabo.Views"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"        
            android:TabbedPage.ToolbarPlacement="Bottom"
            android:TabbedPage.BarItemColor="Black"
            android:TabbedPage.BarSelectedItemColor="White"
             x:Class="lelabo.Views.TabsPage">

    <TabbedPage.BarBackgroundColor>
        <OnPlatform x:TypeArguments="Color">
            <OnPlatform.iOS>White</OnPlatform.iOS>
            <OnPlatform.Android>#508ca7</OnPlatform.Android>
        </OnPlatform>
    </TabbedPage.BarBackgroundColor>

    <views:TabVoiture IconImageSource="lab_icon_voiture.png"/>
    <views:TabAvion IconImageSource="lab_icon_avion.png"/>
    <views:CountPage IconImageSource="lab_icon_compteur.png"/>

</TabbedPage>